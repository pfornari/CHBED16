<div>

  <h2>Lista de productos:</h2>

  <ul>
    {{#each productsToRender.docs as |product|}}
      <li>
        <h2>Producto: {{product.title}}</h2>
        <p>Descripci√≥n: {{product.description}}</p>
        <p>Precio: $ {{product.price}}</p>
        <button
          class="addProductToCart"
          data-cid="{{cartId}}"
          data-pid="{{product._id}}"
          onclick="addToCart('{{cartId}}', '{{product._id}}')"
          type="button"
        >Agregar al Carrito</button>
      </li>
    {{/each}}
  </ul>

  <button id="goToCartButton" onclick="goToCart('{{cartId}}')" type="button">Ir al Carrito</button>

  {{#if productsToRender.prevPage}}
    <div class="pagination-button">
      <button><a
          href="/api/products/?page={{productsToRender.prevPage}}"
        >Anterior</a></button>
    </div>
  {{/if}}

  {{#if productsToRender.nextPage}}
    <div class="pagination-button">
      <button><a
          href="/api/products/?page={{productsToRender.nextPage}}"
        >Siguiente</a></button>
    </div>
  {{/if}}
</div>

<script src="/js/add.products.js"></script>